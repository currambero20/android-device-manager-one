services:
  # Backend Service
  - type: web
    name: android-device-manager-backend
    env: node
    region: oregon
    plan: free
    buildCommand: pnpm install && pnpm run build
    startCommand: node dist/index.js
    envVars:
      - key: NODE_ENV
        value: production
      - key: PORT
        value: 10000
      - key: JWT_SECRET
        value: k3S9mJ3BrxYzu9KTJINJt-pe1DlgQs_gsl_pRyGu4q4
      - key: NEXTAUTH_SECRET
        value: ecW0HQUh1s_IdDz1Hqgy1q_kmVwiiPHuTtCxJxztXOs
      - key: DATABASE_URL
        fromDatabase:
          name: android-device-manager-db
          property: connectionString
      - key: DIRECT_URL
        fromDatabase:
          name: android-device-manager-db
          property: connectionString

databases:
  - name: android-device-manager-db
    databaseName: android_device_manager
    user: android_user
    plan: free
